[Unit]
Description=Technical Seminars Workshop Service
After=network.target docker.service
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/content
ExecStart=/bin/bash /content/start_image.sh
ExecStop=/bin/bash -c 'cd /content && docker-compose down || true'
TimeoutStartSec=600
TimeoutStopSec=60
User=root
Group=root
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

